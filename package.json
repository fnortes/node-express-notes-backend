{
  "name": "node-express-notes-backend",
  "version": "1.0.0",
  "description": "Notes API Rest backend with node, express and MongoDB",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "start:dev": "NODE_ENV=development nodemon index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "test": "NODE_ENV=test jest --verbose --silent",
    "test:watch": "npm run test -- --watch",
    "prepare": "husky install"
  },
  "author": "Francisco Nortes Belmonte",
  "license": "ISC",
  "devDependencies": {
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "supertest": "6.1.3"
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "mongoose": "5.12.5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
